{
  "compilerOptions": {
      "target": "es2015",
      "module": "commonjs",
      "lib": ["es2015", "es2016", "dom", "es2017", "es6", "es5"],
      "esModuleInterop": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": ["node_modules/*","src/types/*"]
      }
  },
  "include": [
    "src/**/*", "index.ts",
  ],
  "exclude": [
    "test/**/*"
  ]
}
