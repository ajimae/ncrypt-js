  "bugs": {
    "url": "https://github.com/ajimae/ncrypt-js/issues"
  },
  "homepage": "https://github.com/ajimae/ncrypt-js#readme",
  "devDependencies": {
    "@types/chai": "^4.2.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.2",
    "chai": "^4.2.0",
    "coveralls": "^3.0.6",
    "cross-env": "^5.2.0",
    "crypto": "^1.0.1",
    "mocha": "^6.2.0",
    "mocha-istanbul": "^0.3.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^14.1.1",
